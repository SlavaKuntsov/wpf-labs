<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style
		x:Key="TextBox"
		TargetType="TextBox">

		<Setter
			Property="CaretBrush"
			Value="white" />

		<Setter 
			Property="Padding"
			Value="10 5"/>

		<Setter
			Property="Foreground"
			Value="#FAF4D8"/>

		<Setter
			Property="FontSize"
			Value="16"/>

		<Setter
			Property="BorderThickness"
			Value="0"/>

		<Setter
			Property="Background"
			Value="Transparent"/>

		<Setter
			Property="VerticalAlignment"
			Value="Center"/>

		<Setter
			Property="Template">
			<Setter.Value>

				<ControlTemplate
					TargetType="TextBox">
					<Border
						CornerRadius="10"
						BorderBrush="Gray"
						BorderThickness="1"
						VerticalAlignment="Center">

						<!--<TextBox
							Padding="10 5"
							Foreground="#FAF4D8"
							FontSize="16"
							BorderThickness="0"
							Background="Transparent"
							VerticalAlignment="Center" />-->

						<ScrollViewer
							x:Name="PART_ContentHost" />

					</Border>

				</ControlTemplate>
			</Setter.Value>
		</Setter>

	</Style>
</ResourceDictionary>